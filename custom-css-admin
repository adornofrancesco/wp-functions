/*=============================================
=          CUSTOM CSS WIDGET DASHBOARD     =
=============================================*/

function aggiungi_stile_widget_dashboard() {
    // Usa wp_enqueue_style per aggiungere il tuo file CSS
    wp_enqueue_style('widget-dashboard-stile', get_template_directory_uri() . '/assets/admin.css');
}
add_action('admin_enqueue_scripts', 'aggiungi_stile_widget_dashboard');
